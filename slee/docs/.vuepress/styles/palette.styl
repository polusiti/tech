//***vdoingテーマ-スタイル変数***//

// カラー
$accentColor = #11A8CD // メインテーマカラー
$activeColor = #ff5722
$arrowBgColor = #ccc

// レイアウト
$navbarHeight = 3.6rem
$sidebarWidth = 18rem
$contentWidth = 860px
$homePageWidth = 1100px
$rightMenuWidth = 230px // 右側メニュー

// コードブロック
$lineNumbersWrapperWidth = 2.5rem

// 背景画像設定
body
  background-image: url('https://pub-d59d6e46c3154423956f648f8df909ae.r2.dev/bg%20(1).png') !important
  background-size: cover !important
  background-position: center !important
  background-attachment: fixed !important
  background-repeat: no-repeat !important

// ライトモード
.theme-mode-light
  --bodyBg: transparent
  --mainBg: rgba(255,255,255,0.95)
  --sidebarBg: rgba(255,255,255,0.9)
  --blurBg: rgba(255,255,255,0.9)
  --textColor: #004050
  --textLightenColor: #0085AD
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #f6f6f6
  --codeColor: #525252

// ダークモード
.theme-mode-dark
  --bodyBg: transparent
  --mainBg: rgba(30,30,34,0.95)
  --sidebarBg: rgba(30,30,34,0.9)
  --blurBg: rgba(30,30,34,0.9)
  --textColor: rgb(140,140,150)
  --textLightenColor: #0085AD
  --borderColor: #2C2C3A
  --codeBg: #252526
  --codeColor: #fff

// 読み取りモード
.theme-mode-read
  --bodyBg: transparent
  --mainBg: rgba(245,245,213,0.95)
  --sidebarBg: rgba(245,245,213,0.9)
  --blurBg: rgba(245,245,213,0.9)
  --textColor: #004050
  --textLightenColor: #0085AD
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #282c34
  --codeColor: #fff