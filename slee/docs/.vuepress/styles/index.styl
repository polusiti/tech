// ホームページの背景設定
.banner {
  background: none !important;
}

// トップ進捗バー
#nprogress .bar {
  background: #11A8CD !important;
}

// ナビゲーションバーの背景
.navbar {
  background-color: rgba(255, 255, 255, 0.9);
  backdrop-filter: saturate(180%) blur(20px);
}

// カードスタイルの設定
.home .hero, .content-wrap, .content:not(.custom) {
  background: transparent !important;
  box-shadow: none !important;
}

// コードブロックのスタイル
.code-group__nav {
  background: rgba(255, 255, 255, 0.9) !important;
}

// 記事の背景を透過にする
.theme-vdoing-content {
  background: transparent !important;
}

// Fantasyコンポーネント強化スタイル
.fantasy {
  position: fixed;
  top: 0;
  height: 100vh;
  width: 100%;
  z-index: -9;
}

.hidden {
  display: none;
}

#display {
  margin: auto;
}

/* 图片大小 */
.vdoing-index-class .home-wrapper .banner {
    margin-top: 0 !important;
    height: 100vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

.vdoing-index-class .home-wrapper .banner .banner-conent {
    padding-top: 7rem;
    text-align: center;
}

.vdoing-index-class .home-wrapper .banner .banner-conent .hero #main-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
}

.vdoing-index-class .home-wrapper .banner .banner-conent .hero .description {
    font-size: 1.4rem;
    color: #fff;
    margin-bottom: 2rem;
}

.vdoing-index-class .home-wrapper .main-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    gap: 2rem;
}

.vdoing-index-class .home-wrapper .main-wrapper .main-left {
    flex: 1;
}

.vdoing-index-class .home-wrapper .main-wrapper .main-right {
    width: 300px;
}

.vdoing-index-class .post.card-box {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    backdrop-filter: blur(10px);
    transition: transform 0.3s ease;
}

.vdoing-index-class .post.card-box:hover {
    transform: translateY(-2px);
}

.vdoing-index-class .blogger-wrapper.card-box,
.vdoing-index-class .categories-wrapper.card-box,
.vdoing-index-class .tags-wrapper.card-box,
.vdoing-index-class .custom-html-box.card-box {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    backdrop-filter: blur(10px);
}